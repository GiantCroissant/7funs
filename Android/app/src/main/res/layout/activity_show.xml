<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.giantcroissant.android_7funs.ShowInfoActivity">

    <include
        android:id="@+id/show_tool_bar"
        layout="@layout/tool_bar"
        ></include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/show_tool_bar">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff737373">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:layout_weight="1.3"
                android:scaleType="fitCenter"
                android:background="#00ffffff"
                android:src="@color/White"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="料理美食王"
                android:textColor="#ffff7f36"
                android:id="@+id/show_title"
                android:textSize="25dp"
                android:maxLines="1"
                android:minLines="1"
                android:layout_weight="1.7"
                android:gravity="center"
                android:background="#00ffffff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="播出時間：週一到週五\n晚上七點 東風衛視台"
                android:textColor="#ff000000"
                android:id="@+id/textView"
                android:textSize="20dp"
                android:maxLines="2"
                android:minLines="1"
                android:layout_weight="1.6"
                android:gravity="center"
                android:background="#00ffffff" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:id="@+id/imageView3"
                android:background="#00ffffff"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:src="@color/White"
                android:scaleType="fitCenter"
                android:paddingTop="1dp"
                android:paddingBottom="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="各位喜愛『料理美食王』的觀眾朋友您好！『料理美食王』的食譜會公布在『料理美食王』的節目部落格『 料 理 交 割 』中，以及東風官網『料理美食王』專區。\n部落格網址：http://blog.xuite.net/chiao939/10thfoods"
                android:textColor="#ff000000"
                android:id="@+id/textView2"
                android:textSize="20dp"
                android:minLines="1"
                android:layout_weight="0.9"
                android:gravity="top"
                android:background="#00ffffff"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout2"
            android:layout_weight="8">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/show_Info_button"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:background="@color/White"
                android:layout_marginRight="2dp"
                android:src="@drawable/showinfo"
                android:padding="15dp"
                android:clickable="true"
                android:onClick="onClick" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cook_info_button"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:background="@color/White"
                android:layout_marginLeft="1dp"
                android:src="@drawable/cookinfo"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:onClick="onClick" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

