<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="240dp"
    android:gravity="start"
    android:orientation="vertical"
    android:clickable="false"
    android:background="@color/White">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ff777777"
        android:clickable="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cook_book_image"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:clickable="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="三色嫩煎鱈魚-白家豪師傅"
            android:id="@+id/cook_book_title_text"
            android:textSize="20dp"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false"
            android:layout_weight="1"
            android:background="#007d7d7d"
            android:clickable="false"
            android:nestedScrollingEnabled="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/White"
            android:layout_marginLeft="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/video_short_image"
        android:layout_toEndOf="@+id/video_short_image"
        android:layout_alignTop="@+id/video_short_image"
        android:layout_alignBottom="@+id/video_short_image"
        android:layout_weight="3"
        android:clickable="false">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:clickable="false">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/collected_icon"
                android:layout_weight="3"
                android:background="@color/White"
                android:src="@drawable/heart"
                android:scaleType="fitCenter"
                android:layout_gravity="top"
                android:clickable="false"
                android:nestedScrollingEnabled="false"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:text="5"
                android:textColor="#ff9a9a9a"
                android:id="@+id/collected_count_text"
                android:textSize="16dp"
                android:layout_weight="1"
                android:background="#ffffffff"
                android:textAlignment="center"
                android:gravity="center_vertical|left"
                android:clickable="false"
                android:layout_toRightOf="@+id/collected_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:text="人收藏 · "
                android:textColor="#ff9a9a9a"
                android:id="@+id/textView4"
                android:textSize="16dp"
                android:layout_weight="1"
                android:background="#ffffffff"
                android:textAlignment="center"
                android:gravity="center_vertical|left"
                android:clickable="false"
                android:layout_toRightOf="@+id/collected_count_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:text="999"
                android:textColor="#ff9a9a9a"
                android:id="@+id/cook_book_view_count_text"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/textView4"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:layout_weight="1"
                android:background="#ffffffff"
                android:clickable="false"
                android:gravity="center_vertical|left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:text="人看過"
                android:textColor="#ff9a9a9a"
                android:id="@+id/textView5"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/cook_book_view_count_text"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:layout_weight="1"
                android:background="#ffffffff"
                android:clickable="false"
                android:gravity="center_vertical|left" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/collect_cook_book_Button"
                android:src="@drawable/heart_outline"
                android:scaleType="fitCenter"
                android:background="@color/White"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:onClick="onClick" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>