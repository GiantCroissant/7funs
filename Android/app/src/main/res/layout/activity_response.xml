<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.giantcroissant.android_7funs.ResponseActivity"
    android:background="#ffbcbcbc">

    <include
        android:id="@+id/list_response_tool_bar"
        layout="@layout/tool_bar"
        ></include>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@color/White"
        android:layout_below="@+id/list_response_tool_bar"
        android:id="@+id/question_content_layout"
        android:paddingBottom="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/question_content_owner_icon"
            android:layout_centerVertical="true"
            android:src="@drawable/owner_icon"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="3"
            android:background="@color/White" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/question_content_owner_icon"
            android:layout_toEndOf="@+id/question_content_owner_icon"
            android:layout_alignTop="@+id/question_content_owner_icon"
            android:layout_alignBottom="@+id/question_content_owner_icon"
            android:layout_weight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Gina_12345 : Happy"
                android:id="@+id/question_content_text"
                android:textSize="20dp"
                android:layout_alignTop="@+id/question_content_owner_icon"
                android:layout_toRightOf="@+id/question_content_owner_icon"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:background="#ffffffff" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView2"
                    android:layout_weight="8"
                    android:background="@color/White"
                    android:src="@drawable/create_time"
                    android:scaleType="fitCenter"
                    android:layout_gravity="top" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:text="一天前"
                    android:textColor="#ff9a9a9a"
                    android:id="@+id/question_content_create_time"
                    android:textSize="20dp"
                    android:layout_alignTop="@+id/question_content_owner_icon"
                    android:layout_toRightOf="@+id/question_content_owner_icon"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:background="#ffffffff"
                    android:textAlignment="center"
                    android:gravity="top" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_response"
        android:layout_below="@+id/question_content_layout"
        android:layout_above="@+id/edit_layout"
        android:background="@color/White"
        android:layout_marginTop="0.5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_layout"
        android:layout_alignParentBottom="true"
        android:background="#ffa9a9a9">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:background="#ffa9a9a9"
            android:padding="10dp"
            android:editable="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="發送"
            android:id="@+id/button"
            android:layout_weight="0"
            android:textSize="20sp"
            android:textColor="#ff000000" />
    </LinearLayout>

</RelativeLayout>
