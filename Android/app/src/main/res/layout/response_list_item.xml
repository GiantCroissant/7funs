<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp"
    android:gravity="start"
    android:orientation="horizontal"
    android:clickable="true"
    android:background="@color/White">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/video_short_image"
        android:layout_centerVertical="true"
        android:src="@drawable/owner_icon"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="3"
        android:background="@color/White" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/video_short_image"
        android:layout_toEndOf="@+id/video_short_image"
        android:layout_alignTop="@+id/video_short_image"
        android:layout_alignBottom="@+id/video_short_image"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Gina_12345 : Happy"
            android:id="@+id/response_content"
            android:textSize="20dp"
            android:layout_alignTop="@+id/video_short_image"
            android:layout_toRightOf="@+id/video_short_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:background="#ffffffff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/response_time_icon"
                    android:layout_weight="8"
                    android:background="@color/White"
                    android:src="@drawable/create_time"
                    android:scaleType="fitCenter"
                    android:layout_gravity="top" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:text="一天前"
                    android:textColor="#ff9a9a9a"
                    android:id="@+id/response_create_time_text"
                    android:textSize="20dp"
                    android:layout_alignTop="@+id/video_short_image"
                    android:layout_toRightOf="@+id/video_short_image"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:background="#ffffffff"
                    android:textAlignment="center"
                    android:gravity="top" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>