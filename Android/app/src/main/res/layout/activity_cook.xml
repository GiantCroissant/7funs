<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.giantcroissant.android_7funs.CookInfoActivity">

    <include
        android:id="@+id/cook_tool_bar"
        layout="@layout/tool_bar"
        ></include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cook_tool_bar">

        <view
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="android.support.v4.view.ViewPager"
            android:id="@+id/cookPager"
            android:layout_below="@+id/show_and_cook_tool_bar"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/linearLayout"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout"
            android:layout_weight="8">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/show_Info_button"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:background="@color/White"
                android:layout_marginRight="2dp"
                android:src="@drawable/showinfo"
                android:padding="15dp"
                android:clickable="true"
                android:onClick="onClick" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cook_info_button"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:background="@color/White"
                android:layout_marginLeft="1dp"
                android:src="@drawable/cookinfo"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:onClick="onClick" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
